@inherits LayoutComponentBase

<div class="page">
    <main>
        <div class="d-flex justify-content-between align-items-center px-4 py-2 bg-light">
            <div class="d-flex gap-3">
                <a href="/" class="text-decoration-none">Shop</a>
            </div>
            <div class="position-relative d-inline-block">
                <a href="/Cart" class="text-decoration-none position-relative">
                    <i class="bi bi-cart" style="font-size: 1.5rem;"></i>
                </a>
            </div>
        </div>

        <article class="content productList px-4">
                @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

